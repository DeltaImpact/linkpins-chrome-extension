{
  "manifest_version": 2,
  "name": "Linkpins plugin",
  "version": "1.0.0",
  "description": "Linkpins plugin",
  "icons": {
    "128": "rightshark.png"
  },
  "browser_action": {
    "default_title": "Popup",
    "default_popup": "pages/popup.html"
  },
  "background": {
    "page": "pages/background.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "file://*/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "static/*",
    "static/css/*.css"
  ]
}
